f=open("03-16.txt","r",encoding="utf-8")
x=open("03-16c.txt","w",encoding="utf-8")
irasj=(".","!","?")
lista=[i for i in f.read()]
for i in range(len(lista)):
    if i<len(lista)-1:
        if lista[i] in irasj:
            lista[i]=lista[i]+"\n"
            x.write(lista[i])
            lista.remove(lista[i+1])
        else:
            x.write(lista[i])
x.close()
