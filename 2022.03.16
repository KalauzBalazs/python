x=open("03-16c.txt","r",encoding="utf-8") 
magan=["a","e","i","o","u"]
lista=[i.lower() for i in x.read()]
n=0
for i in lista:
    if i in magan:
        n+=1
print("%d magánhangzó van."%n)
if n%2==0:
    print("A magánhangzók száma páros.")
else:
    print("A magánhangzók száma páratlan.")
x.close()
